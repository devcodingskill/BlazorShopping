@inherits ProductCategoriesNavMenuBase

@if (ProductCategoriesDtos == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"/>

}

else
{
    @foreach (var productCategoryDto in ProductCategoriesDtos)
    {
        var link = $"/ProductsByCategory/{productCategoryDto.Id}";
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@productCategoryDto.IconCss"></span> &nbsp; @productCategoryDto.Name
            </NavLink>
        </div>
    }
}